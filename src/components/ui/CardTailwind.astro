---
export interface Props {
  title?: string;
  className?: string;
}

const { title, className = '' } = Astro.props;
---

<div class={`tailwind-card ${className}`}>
  {title && (
    <h3 class="text-lg font-semibold text-gray-900 mb-3">{title}</h3>
  )}
  <div class="text-gray-600">
    <slot />
  </div>
</div>